<div class="grid {{ pieceSelected == 0 ? 'unclicable' : '' }} ">
  {% set y = -1 %}
  {% for row in grid %}
    {% set y = y + 1 %}
    <div class="grid-row">
      {% set x = -1 %}
      {% for value in row %}
        {% set x = x + 1 %}
        <a href="{{canPlay == false or pieceSelected == 0 or value != '.' ? '#' :  path('game_place', {'idGame': gameId, 'x': x, 'y': y}) }}">
            <div class="default-box grid-box {{ value != '.' ? 'filled' : '' }} {{canPlay == false or pieceSelected == 0 or value != '.' ? 'unclicable' : '' }} {{ value in winningLine ? 'victory' : '' }} z-depth-1">
                {% if (value != '.') %}
                  <img class="piece-image" src="{{ asset('images/piece-image' ~ value ~ '.png') }}" alt="Piece {{value}}" />   
                {% endif %}      
            </div>
        </a>
      {% endfor %}
    </div>
  {% endfor %}
</div>