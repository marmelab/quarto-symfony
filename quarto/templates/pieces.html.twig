<div class="pieces-row">
  {% for piece in pieces %}
    <a href="{{ pieceSelected > 0 ? '#' :  path('game_select', {'id_game': gameId, 'piece': piece.id}) }}">
      <div class="default-box piece-box {{ piece.used ? 'used' : '' }} {{ piece.id == pieceSelected ? 'selected' : '' }} {{ pieceSelected > 0 ? 'phasePlacement' : '' }} z-depth-1">
          <span class="piece-value">{{piece.id}}</span>        
      </div>
    </a>  
  {% endfor %}
</div>
